<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules for Android 12+ (API 31+).
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include Room database (lottery history and custom lottery types) -->
        <include domain="database" path="lotto_database" />
        <!-- Include DataStore preferences (user settings) -->
        <include domain="file" path="datastore/user_preferences.preferences_pb" />
        <!-- Exclude Room database journal files -->
        <exclude domain="database" path="lotto_database-journal" />
        <exclude domain="database" path="lotto_database-shm" />
        <exclude domain="database" path="lotto_database-wal" />
        <!-- Exclude cache -->
        <exclude domain="cache" path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Include Room database (lottery history and custom lottery types) -->
        <include domain="database" path="lotto_database" />
        <!-- Include DataStore preferences (user settings) -->
        <include domain="file" path="datastore/user_preferences.preferences_pb" />
        <!-- Exclude Room database journal files -->
        <exclude domain="database" path="lotto_database-journal" />
        <exclude domain="database" path="lotto_database-shm" />
        <exclude domain="database" path="lotto_database-wal" />
        <!-- Exclude cache -->
        <exclude domain="cache" path="." />
    </device-transfer>
</data-extraction-rules>